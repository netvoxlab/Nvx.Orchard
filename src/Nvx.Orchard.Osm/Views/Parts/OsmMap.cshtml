@{
    int zoom = 18;
    int x = Nvx.Orchard.Osm.OsmMath.GetX(zoom, Model.Longitude);
    int y = Nvx.Orchard.Osm.OsmMath.GetY(zoom, Model.Latitude);
    if ((x & 1) == 0)
    {
        x=x-2;
    }
    if ((y & 1) == 0)
    {
        y=y-2;
    }
    x /= 2;
    y /= 2;
}
<table cellpadding="0" cellspacing="0" style="border-collapse:collapse">
<tr>
<td>
<img alt="Location" border="0" src="http://b.tile.openstreetmap.org/@(zoom+1)/@(x)/@(y).png" />
</td>
<td>
<img alt="Location" border="0" src="http://b.tile.openstreetmap.org/@(zoom+1)/@(x+1)/@(y).png" />
</td>
</tr>
<tr>
<td>
<img alt="Location" border="0" src="http://b.tile.openstreetmap.org/@(zoom+1)/@(x)/@(y+1).png" />
</td>
<td>
<img alt="Location" border="0" src="http://b.tile.openstreetmap.org/18/@(x+1)/@(y+1).png" />
</td>
</tr>
</table>
